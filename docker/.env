# re-command Docker compose config
# Copy this file to .env and modify the values as needed

# Music library path (REQUIRED - this cannot be configured via web UI)
# Set the full path to your navidrome music library directory on the host

MUSIC_PATH=/home/user/Music

# Optional, can also be configured through the web UI, but adding them here keeps them safe when updating

# Navidrome Configuration
RECOMMAND_ROOT_ND=
RECOMMAND_USER_ND=
RECOMMAND_PASSWORD_ND=

# ListenBrainz Configuration
RECOMMAND_LISTENBRAINZ_ENABLED=False
RECOMMAND_TOKEN_LB=
RECOMMAND_USER_LB=

# Last.fm Configuration
RECOMMAND_LASTFM_ENABLED=False
RECOMMAND_LASTFM_API_KEY=
RECOMMAND_LASTFM_API_SECRET=
RECOMMAND_LASTFM_USERNAME=

# LLM Configuration
RECOMMAND_LLM_ENABLED=False
RECOMMAND_LLM_PROVIDER=
RECOMMAND_LLM_API_KEY=
RECOMMAND_LLM_MODEL_NAME=
RECOMMAND_LLM_BASE_URL=

# Deezer Configuration
RECOMMAND_DEEZER_ARL=

# Download Method (streamrip or deemix)
RECOMMAND_DOWNLOAD_METHOD=streamrip

# Comment Tags
RECOMMAND_TARGET_COMMENT=lb_recommendation
RECOMMAND_LASTFM_TARGET_COMMENT=lastfm_recommendation
RECOMMAND_ALBUM_RECOMMENDATION_COMMENT=album_recommendation
RECOMMAND_LLM_TARGET_COMMENT=llm_recommendation

# Additional Configuration
RECOMMAND_ALBUM_RECOMMENDATION_ENABLED=false
RECOMMAND_HIDE_DOWNLOAD_FROM_LINK=false
RECOMMAND_HIDE_FRESH_RELEASES=false
RECOMMAND_FRESH_RELEASES_CACHE_DURATION=300
RECOMMAND_DEEZER_MAX_CONCURRENT_REQUESTS=3
